<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('asset/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('asset/css/main.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('asset/script/bootstrap.min.js') }}"></script>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous" defer></script>
        {% endblock %}
    </head>
    <body>
        {#<h2>{{ app.request.attributes.get('_route') }}</h2>#}
       {# <a href="{{ path('app_login')}}">Connexion</a>
        <a href="{{ path('app_logout')}}">Deconnexion</a> #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Blog</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                  <li class="nav-item">
                    <a class="nav-link active" href="{{ path('app_home')}}">Home
                      <span class="visually-hidden">(current)</span>
                    </a>
                  </li>
                  {# test si l'utilisateur est connecté affiche le bouton déconnexion #}
                  {% if app.user != '' or app.user != null %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_category_all') }}">All Category</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_article_add') }}">Add Article</a>
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_category_add') }}">Add Category</a>
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                    {# si l'utilisateur déconnecté affiche le bouton connexion  #}
                    {% else %}
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Ajouter Compte</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                      </li>
                  {% endif %}
                </ul>
              </div>
            </div>
        </nav>
        {# On va écrire notre navbar ici #}
        {% block body %}{% endblock %}
        {# On va écrire notre footer ici #}
    </body>
</html>
